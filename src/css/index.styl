.image-viewer {
    position absolute;
    top 0;
    left 0;
    width 100%;
    height 100%;
    background-color #000;
    z-index 100;
    font-size 0;
    transform translate3d(0, 0, 0);
    backface-visibility hidden;
    overflow hidden;

    .viewer-animation {
        transition transform .3s;
    }

    .viewer {
        display inline-block;
        position absolute;
        top 50%;
        width 100%;
        text-align center;
        transform translate3d(0, -50%, 0);
        backface-visibility hidden;
    }

    .image-header {
        position absolute;
        top 0;
        left 0;
        width 100%;
        color #fff;
        font-size 12px;
        z-index 11;
    }

    .image-body {
        width 100%;
        height 100%;
        font-size 0;
        z-index 10;

        .panel {
            display inline-block;
            overflow hidden;

            img {
                max-width 100%;
                max-height 100%;
            }
        }
    }

    .image-footer {
        position absolute;
        left 0;
        bottom 0;
        width 100%;
        color #fff;
        font-size 12px;
        z-index 11;
    }
}