.image-viewer {
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 100
    overflow hidden

    .viewer-animation {
        transition transform .3s
    }

    .viewer {
        display inline-block
        position absolute
        top 50%
        width 100%
        text-align center
        transform translate3d(0, -50%, 0)
        backface-visibility hidden
    }

    .image-header {
        position absolute
        top 0
        left 0
        width 100%
        color #fff
        font-size 12px
        z-index 12
    }

    .image-body {
        width 100%
        height 100%
        background-color #000
        z-index 10

        .viewer-wrapper {
            height 100%
            font-size 0
        }

        .panel {
            display inline-block
            overflow hidden

            img {
                max-width 100%
                max-height 100%
            }

            span {
                font-size 12px
                color #fff
            }
        }
    }

    .image-footer {
        position absolute
        left 0
        bottom 0
        width 100%
        color #fff
        font-size 12px
        z-index 12
    }

    .image-animation {
        position absolute
        z-index 5
        will-change transform, width, height
        backface-visibility hidden

        img {
            max-width 100%
            max-height 100%
        }

        &.hide {
            width 0 !important
            height 0 !important
            will-change auto
        }
    }

    .ball-clip-rotate {
        position absolute
        top 50%
        left 0
        transform translateY(-50%)
        width 100%
        z-index 11
        text-align center

        > div {
            display inline-block
            width 26px
            height 26px
            border-radius 100%
            border 2px solid #fff
            border-bottom-color transparent
            background 0 0
            animation ballRotate .75s 0s linear infinite
        }

        &.hide {
            display none
        }
    }

    @keyframes ballRotate {
        0% {
            transform rotate(0)
        }

        50% {
            transform rotate(180deg)
        }

        100% {
            transform rotate(360deg)
        }
    }
}