.image-viewer {
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    z-index 100
    overflow hidden
    touch-action none
    backface-visibility hidden
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)

    &.animation {
        pointer-events none

        .image-viewer-bg {
            will-change opacity
            transition opacity 333ms cubic-bezier(0.4, 0, 0.22, 1)
        }

        .image-animation {
            will-change transform
            transition transform 333ms cubic-bezier(0.4, 0, 0.22, 1)
        }
    }

    .viewer-animation {
        transition transform .3s
    }

    .viewer {
        display inline-block
        position absolute
        top 0
        left 0
        width 100%
        text-align center
        backface-visibility hidden
    }

    .image-viewer-bg {
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        opacity 0.001
        background-color #000
        z-index 1
    }

    .image-header {
        position absolute
        top 0
        left 0
        width 100%
        color #fff
        font-size 12px
        z-index 12
    }

    .image-body {
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        z-index 10
        backface-visibility hidden

        .viewer-wrapper {
            height 100%
            font-size 0
            will-change transform
            backface-visibility hidden
        }

        .panel {
            display inline-block
            overflow hidden
            will-change transform

            img {
                // 保留100%是考虑到兼容一些古老并且不兼容vw、vh单位的机型
                max-width 100%
                max-height 100%
                max-width 100vw
                max-height 100vh
            }

            span {
                font-size 12px
                color #fff
            }
        }
    }

    .image-footer {
        position absolute
        left 0
        bottom 0
        width 100%
        color #fff
        font-size 12px
        z-index 12
    }

    .image-animation {
        position absolute
        top 0
        left 0
        z-index 5
        text-align center
        transition none
        transform-origin left top
        backface-visibility hidden

        img {
            max-width 100%
            max-height 100%
        }

        &.hide {
            display none
        }
    }

    .ball-clip-rotate {
        position absolute
        top 50%
        left 0
        transform translateY(-50%)
        width 100%
        z-index 11
        text-align center

        > div {
            display inline-block
            width 26px
            height 26px
            border-radius 100%
            border 2px solid #fff
            border-bottom-color transparent
            background 0 0
            animation ballRotate .75s 0s linear infinite
        }

        &.hide {
            display none
        }
    }

    @keyframes ballRotate {
        0% {
            transform rotate(0)
        }

        50% {
            transform rotate(180deg)
        }

        100% {
            transform rotate(360deg)
        }
    }
}